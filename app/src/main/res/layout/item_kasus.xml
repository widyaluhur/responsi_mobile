<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-7-3"
                android:layout_centerVertical="true"
                android:paddingHorizontal="32dp"/>

            <LinearLayout
                android:id="@+id/tv_case"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/tv_tanggal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sembuh"
                        android:layout_weight="3"/>

                    <TextView
                        android:id="@+id/tv_sembuh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000 Kasus"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:paddingEnd="35dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Meninggal"
                        android:layout_weight="3"/>

                    <TextView
                        android:id="@+id/tv_meninggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000 Kasus"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:paddingEnd="35dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Terkonfirmasi"
                        android:layout_weight="3"/>

                    <TextView
                        android:id="@+id/tv_terkonfirmasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000 Kasus"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:paddingEnd="35dp"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>